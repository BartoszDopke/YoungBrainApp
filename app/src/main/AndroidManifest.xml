<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pracainzynierska.inzynierka">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize|mcc|mnc"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".SettingsActivity"></activity>
        <activity
            android:name=".ProfileEditActivity"
            android:parentActivityName=".SettingsActivity" />
        <activity
            android:name=".RememberTheSequenceHardActivity"
            android:parentActivityName=".UserPanelActivity"/>
        <activity
            android:name=".RememberTheSequenceMediumActivity"
            android:parentActivityName=".UserPanelActivity"/>
        <activity
            android:name=".DailyChallengePopUpActivity"
            android:parentActivityName=".DailyChallengeActivity"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity
            android:name=".IntroductionActivity"
            android:parentActivityName=".UserPanelActivity"/>
        <activity
            android:name=".FillTheTextActivity"
            android:parentActivityName=".UserPanelActivity"/>
        <activity
            android:name=".MathChainActivity"
            android:parentActivityName=".UserPanelActivity"/>
        <activity
            android:name=".GeomemotryActivity"
            android:parentActivityName=".UserPanelActivity"/>
        <activity
            android:name=".RememberTheSequenceEasyActivity"
            android:parentActivityName=".UserPanelActivity" />
        <activity
            android:name=".RegisterActivity"
            android:parentActivityName=".MainActivity"/>
        <activity
            android:name=".PremiumActivity"
            android:parentActivityName=".UserPanelActivity" />
        <activity
            android:name=".DailyChallengeActivity"
            android:parentActivityName=".UserPanelActivity"/>
        <activity
            android:name=".MyProgressActivity"
            android:parentActivityName=".UserPanelActivity"/>
        <activity
            android:name=".UserPanelActivity"
            android:parentActivityName=".UserPanelActivity"/>
        <activity
            android:name=".SignInActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.pracainzynierska.inzynierka.MainActivity" />
        </activity>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PopUpActivity"
            android:theme="@style/AppTheme.CustomTheme" />
    </application>

</manifest>