<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCC899"
    tools:context=".MathChainActivity">

    <TextView
        android:id="@+id/timerView"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:gravity="center"
        android:text=""
        android:textColor="#0088B3"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_number"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="32dp"
        android:textColor="#0088B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.266" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="@string/confirm_btn"
        android:background="@drawable/button_shape"
        android:textColor="#D9F6FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userResult_field" />

    <EditText
        android:id="@+id/userResult_field"
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="@string/answer_text"
        android:inputType="textNoSuggestions"
        android:selectAllOnFocus="true"
        android:text=""
        android:textColor="#33300D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/math_operation" />

    <TextView
        android:id="@+id/math_operation"
        android:layout_width="240dp"
        android:layout_height="100dp"
        android:gravity="center"
        android:padding="0dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="32sp"
        android:textColor="#0088B3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.486" />

    <TextView
        android:id="@+id/points_mathchain"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text=""
        android:textSize="24sp"
        android:textColor="#0088B3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_mathchain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/points_mathchain" />

</androidx.constraintlayout.widget.ConstraintLayout>