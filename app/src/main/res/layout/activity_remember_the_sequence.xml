<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="2"
    android:background="#FFFF9E"
    tools:context=".RememberTheSequenceEasyActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="393dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageView
            android:id="@+id/iv_13"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/question"></ImageView>

        <ImageView
            android:id="@+id/iv_12"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/question"></ImageView>

        <ImageView
            android:id="@+id/iv_11"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/question"></ImageView>

        <ImageView
            android:id="@+id/iv_14"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:src="@drawable/question"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:weightSum="4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_15"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/question"></ImageView>

        <ImageView
            android:id="@+id/iv_16"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/question"></ImageView>

        <ImageView
            android:id="@+id/iv_17"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/question"></ImageView>

        <ImageView
            android:id="@+id/iv_18"
            android:layout_weight="1"
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/question"></ImageView>
    </LinearLayout>



    <TextView
        android:id="@+id/points"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:text="Points: 0"
        android:textColor="#6692B3"
        android:textSize="32dp"></TextView>

    <TextView
        android:id="@+id/username_rememberthesequence"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textSize="24sp" />

    <TextView
        android:id="@+id/rtsTimerView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="1"
        android:gravity="right"
        android:textSize="24sp"
        android:textColor="#6692B3"
        android:text="" />

</LinearLayout>