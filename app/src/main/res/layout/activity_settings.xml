<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9F6FF"
    tools:context=".SettingsActivity">

    <Switch
        android:id="@+id/NotificationSwitch"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:text="Notifications"
        android:textSize="20sp"
        android:textColor="#33300D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SoundSwitch" />

    <Switch
        android:id="@+id/SoundSwitch"
        android:layout_width="160dp"
        android:layout_height="59dp"
        android:layout_marginTop="128dp"
        android:text="Sound"
        android:textSize="20sp"
        android:textColor="#33300D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/nicknameChangeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_shape"
        android:textColor="#D9F6FF"
        android:text="Change password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NotificationSwitch" />

</androidx.constraintlayout.widget.ConstraintLayout>