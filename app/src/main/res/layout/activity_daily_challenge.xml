<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9F6FF"
    tools:context="com.pracainzynierska.inzynierka.DailyChallengeActivity">

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="149dp"
        android:layout_height="97dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text=""
        android:textSize="24sp"
        android:textColor="#33300D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showdailychallengebutton" />

    <Button
        android:id="@+id/imInButton"
        android:layout_width="209dp"
        android:layout_height="78dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/button_shape"
        android:text="I'm In!"
        android:textColor="#D9F6FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/showdailychallengebutton" />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="141dp"
        android:layout_height="69dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_shape"
        android:text="Click if you're done!"
        android:textColor="#D9F6FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imInButton"
        android:visibility="invisible"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dailyChallengeTextView"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font"
        android:gravity="center"
        android:text="@string/dailychallenge_text"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="#33300D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/showdailychallengebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="320dp"
        android:background="@drawable/button_shape"
        android:textColor="#D9F6FF"
        android:text="@string/showdailychallengebutton"
        app:layout_constraintBottom_toBottomOf="@+id/dailyChallengeTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nicknameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>